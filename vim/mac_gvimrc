source $HOME/.dotfiles/vim/plugins.vim
source $HOME/.dotfiles/vim/keybindings.vim
source $HOME/.dotfiles/vim/gen_settings.vim

" ----- MacVim Screen Config
set guifont=Inconsolata:h23 " IF IT'S NOT INSTALLED THEN INSTALL IT!

" ----- Load Plugins on startup because gVim doesn't do it already
autocmd VimEnter * PlugInstall
autocmd VimEnter * q

" ----- Start MacVim in fullscreen
set fuoptions=maxvert,maxhorz
au GUIEnter * set fullscreen
