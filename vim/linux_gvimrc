source $HOME/.dotfiles/vim/plugins.vim
source $HOME/.dotfiles/vim/keybindings.vim
source $HOME/.dotfiles/vim/gen_settings.vim
source $HOME/.dotfiles/vim/colorschemes.vim

" ----- Linux gVim Screen Config
set guioptions-=T
set guioptions-=m
set guioptions-=r
set guioptions-=b
set guifont=Inconsolata\ 20
" IF POWERLINE: set guifont=Inconsolata\ for\ Powerline\ 20
" (FONT SIZE IS ALSO DEPENDENT ON SCREEN SIZE!
" CHOOSE ONE THAT YOU'LL BE ABLE TO SEE CLEARLY)

" ----- Load Plugins on startup because gVim doesn't do it already
autocmd VimEnter * PlugInstall
autocmd VimEnter * q
