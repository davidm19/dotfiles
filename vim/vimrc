" KEYBINDINGS
nmap <silent> <leader>h :sp<CR>
nmap <silent> <leader>v :vsp<CR>
nmap <TAB> <C-w>
inoremap jj <ESC>

" SETTINGS
syntax on
set autoindent
set backspace=indent,eol,start
highlight LineNr ctermfg=grey

"  PATHOGEN SETUP
filetype plugin indent on
execute pathogen#infect('$HOME/.vim/plugs/{}')
