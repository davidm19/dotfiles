source ~/.git-completion.bash

yellow="\[\033[0;33m\]"
yellowbold="\[\033[1;33m\]"
cyan="\[\033[0;36m\]"
red="\[\033[0;31m\]"
white="\[\033[0;97m\]"
redbold="\[\033[1;91m\]"
greenbold="\[\033[1;92m\]"
whitebold="\[\033[1;97m\]"
bluebold="\[\033[1;96m\]"
reset="\[\033[0m\]"

alias ls="ls --color=auto"
alias l="ls"

source ~/.git-prompt.sh
export GIT_PS1_SHOWDIRTYSTATE=1

export PS1="[$redbold\u$whitebold@$bluebold\h$yellowbold\$(__git_ps1) $reset$greenbold\w$reset]$ "
