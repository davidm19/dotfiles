# echo "Hello $whoiam. Today's date is: $date"

source ~/.git-prompt.sh
export GIT_PS1_SHOWDIRTYSTATE=1
export PS1="$redbold\u$yellow\$(__git_ps1) $cyan\W $reset$ "
#if the arrow doesn't work, just use a $
