source ~/.git-completion.bash

yellow="\[\033[0;33m\]"
cyan="\[\033[0;36m\]"
red="\[\033[0;31m\]"
white="\[\033[0;97m\]"
redbold="\[\033[1;91m\]"
reset="\[\033[0m\]"

alias vim="nvim"
alias l="ls"
alias cal="calz"
alias tmux="tmux -2"
alias config="bash ~/.update_dotfiles.sh"

export CLICOLOR=1
export LSCOLORS=ExFxCxDxbxegedabagaced

